{
  "compilerOptions": {
    "target": "ES2015",
    "downlevelIteration": true,
    "module": "esnext",
    "lib": ["dom", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
